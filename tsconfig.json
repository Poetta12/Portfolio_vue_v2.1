{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
    // Add other compiler options as needed
  },
  "files": [],
  "exclude": [
    "node_modules",
    "**/*.html"  // Exclude all HTML files
  ]
}

